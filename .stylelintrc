{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-css-modules"
  ],
  "plugins": [
    "stylelint-declaration-strict-value"
  ],
  "rules": {
    "scale-unlimited/declaration-strict-value": "/color/"
  },
  "ignoreFiles": [
    "src/assets/styles/vendor/*.css",
    "src/pages/*.js",
    "src/components/*.js",
    "src/templates/*.js",
    "src/layouts/prism.css"
  ]
}
